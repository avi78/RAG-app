datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transcript {
  id        Int      @id @default(autoincrement())
  videoId   String
  text      String
  topics    Json     // Changed from String[] to Json
  createdAt DateTime @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  url       String
  title     String
  content   String
  createdAt DateTime @default(now())
}
